modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["fontconfig", "dejavu_fonts", "freetype", "xorg.libX11", "xorg.libXext", "xorg.libXrender", "xorg.libXtst", "xorg.libXi"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EdeGen"

[[workflows.workflow]]
name = "EdeGen"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && mkdir -p bin && find src -type f -name \"*.java\" ! -name \"#*\" ! -name \"*~\" > build/BuildList.txt && javac @build/BuildList.txt -sourcepath \"./src\" -d \"./bin\" -encoding \"UTF-8\" && java -Dsun.awt.fontconfig=/home/runner/workspace/fontconfig.properties -cp bin ede.gen.driver.EdeGenerator"
